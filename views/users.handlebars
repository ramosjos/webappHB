    <table>
      <tr>
        <th>Username</th>
        <th>Password</th>
      </tr>	
      {{#each users}}
      <tr>
        <th>{{username}}</th>
        <th>{{password}}</th>
      </tr>
      {{/each}}
     </table> 
      <button type = "button" id="insert-user"><i class="fas fa-upload"></i></button>
       
      <button type = "button" id="delete-user"><i class="fas fa-trash-alt"></i></button> 

      <!--<button type = "button" id="edit-user"><i class="fas fa-edit"></i></button>-->

     <div id="modal-backdrop" class="hidden"></div>
     <div id="insert-user-modal" class="hidden">
      <div class="modal-dialog">

        <div class="modal-header">
          <h3>Add User</h3>
          <button type="button" class="modal-close-button">&times;</button>
        </div>

        <div class="modal-body">
          <div class="input-element">
            <label for="input-1">Username</label>
            <input type="text" id="input-1">
          </div>
          <div class="input-element">
            <label for="input-2">Password</label>
            <input type="text" id="input-2">
          </div>

        <div class="modal-footer">
          <button type="button" class="modal-cancel-button">Cancel</button>
          <button type="button" class="modal-accept-button">Add Team</button>
        </div>
      </div>
     </div>    
