</header>




<main class="score-container">
	{{#each games}}
	<article class="mini-scoreboard">
        <div class="scoreboard-icon">
          <i class="fas fa-basketball-ball"></i>
        </div>
        <div class="scoreboard-content">

          <div class="Team_1_Info">
          <p class="Team_1_Name">
       			{{team_1name}}
	  </p>
	  </div>
	
          <div class="Team_2_Info">
          <p class="Team_2_Name">
        		{{team_2_name}}
	  </p>
          </div>
	  
          <div class="Game_Info">
	  <p class="Game_Date">
        		{{game_date}}
	  </p>
	  <p class="Start_Time">
        		{{start_time}}
	  </p>
	  <p class="Stadium">
        		{{stadium}}
	  </p>
  	  </div>
	  <button type"button" id="thread-icon"><i class="far fa-comment-alt"></i></button>
        </div>
        </article>
	{{/each}}
</main>
 
      <button type = "button" id="insert-game"><i class="fas fa-upload"></i></button>
       
      <button type = "button" id="delete-game"><i class="fas fa-trash-alt"></i></button> 

      <button type = "button" id="edit-game"><i class="fas fa-edit"></i></button>

